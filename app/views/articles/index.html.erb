<div class="home-content">
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-block">
              <span>
                <h4 class="card-title"><%= article.title %></h4>
                <p>
                  Published by user on <%= article.created_at.strftime("%b %d, %Y") %>
                </p>
              </span>
              <p class="card-text">
                <%= article.content %>
              </p>
            </div>
            <div class="card-block">
              <%= link_to article_path(article.id) do %>
                <span>Comments</span>
              <% end %>
              <a href="#">Like</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
